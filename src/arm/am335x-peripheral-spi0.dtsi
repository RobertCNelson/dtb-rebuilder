&spi0 {
	pinctrl-names = "default";

	status = "okay";

	channel@0 {
		compatible = "spidev";
		symlink = "spi/0.0";
		spi-max-frequency = <16000000>;
		reg = <0>;
		spi-cpha;
	};

	channel@1 {
		compatible = "spidev";
		symlink = "spi/0.1";
		spi-max-frequency = <16000000>;
		reg = <1>;
	};
};
